{
  "id": "com.logitech.harmony.hub",
  "version": "1.0.3",
  "compatibility": "0.x || 1.x",
  "name": {
    "en": "Harmony Hub App",
    "nl": "Harmony Hub App"
  },
  "category": [ "appliances", "video" ],
  "description": {
    "en": "Control your Logitech Harmony Hub with Homey",
    "nl": "Bestuur je Logitech Harmony Hub met Homey"
  },
  "author": {
    "name": "Net@ctive"
  },
  "contributors": {
    "developers": [
      {
        "name": "Raymond Brink",
        "email": "raymond@netactive.nl"
      }
    ]
  },
  "images": {
    "small": "assets/images/small.png",
    "large": "assets/images/large.png"
  },
  "permissions": [
    "homey:manager:speech-output",
    "homey:manager:ledring"
  ],
  "speech": [ ],
  "drivers": [
    {
      "id": "hub",
      "name": {
        "en": "Harmony Hub App",
        "nl": "Harmony Hub App"
      },
      "images": {
        "large": "drivers/hub/assets/images/large.png",
        "small": "drivers/hub/assets/images/small.png"
      },
      "class": "other",
      "capabilities": [],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_hubs"
          }
        },
        {
          "id": "add_hubs",
          "template": "add_devices"
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "activity_start_requested",
        "title": {
          "en": "Activity start requested",
          "nl": "Activiteit starten gevraagd"
        },
        "tokens": [
          {
            "name": "hub_name",
            "title": {
              "en": "hub",
              "nl": "hub"
            }
          },
          {
            "name": "activity",
            "title": {
              "en": "activity",
              "nl": "activiteit"
            }
          }
        ]
      },
      {
        "id": "activity_starting",
        "title": {
          "en": "Activity starting",
          "nl": "Activiteit bezig met starten"
        },
        "tokens": [
          {
            "name": "hub_name",
            "title": {
              "en": "hub",
              "nl": "hub"
            }
          },
          {
            "name": "activity",
            "title": {
              "en": "activity",
              "nl": "activiteit"
            }
          }
        ]
      },
      {
        "id": "activity_started",
        "title": {
          "en": "Activity started",
          "nl": "Activiteit gestart"
        },
        "tokens": [
          {
            "name": "hub_name",
            "title": {
              "en": "hub",
              "nl": "hub"
            }
          },
          {
            "name": "activity",
            "title": {
              "en": "activity",
              "nl": "activiteit"
            }
          }
        ]
      },
      {
        "id": "activity_stop_requested",
        "title": {
          "en": "Activity stop requested",
          "nl": "Activiteit stoppen gevraagd"
        },
        "tokens": [
          {
            "name": "hub_name",
            "title": {
              "en": "hub",
              "nl": "hub"
            }
          },
          {
            "name": "activity",
            "title": {
              "en": "activity",
              "nl": "activiteit"
            }
          }
        ]
      },
      {
        "id": "activity_stopping",
        "title": {
          "en": "Activity stopping",
          "nl": "Activiteit bezig met stoppen"
        },
        "tokens": [
          {
            "name": "hub_name",
            "title": {
              "en": "hub",
              "nl": "hub"
            }
          },
          {
            "name": "activity",
            "title": {
              "en": "activity",
              "nl": "activiteit"
            }
          }
        ]
      },
      {
        "id": "all_turned_off",
        "title": {
          "en": "All devices turned off",
          "nl": "Alle apparaten uitgeschakeld"
        },
        "tokens": [
          {
            "name": "hub_name",
            "title": {
              "en": "hub",
              "nl": "hub"
            }
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "start_activity",
        "title": {
          "en": "Start an activity",
          "nl": "Start een activiteit"
        },
        "args": [
          {
            "name": "hub",
            "type": "device",
            "filter": "driver_id=hub"
          },
          {
            "name": "activity",
            "type": "autocomplete",
            "placeholder": {
              "en": "Activity name",
              "nl": "Naam activiteit"
            }
          }
        ]
      },
      {
        "id": "all_off",
        "title": {
          "en": "Turn off all devices",
          "nl": "Alle apparaten uitschakelen"
        },
        "args": [
          {
            "name": "hub",
            "type": "device",
            "filter": "driver_id=hub"
          }
        ]
      },
      {
        "id": "send_command_to_device",
        "title": {
          "en": "Send a command to a device",
          "nl": "Stuur een commando naar een apparaat"
        },
        "args": [
          {
            "name": "hub",
            "type": "device",
            "filter": "driver_id=hub"
          },
          {
            "name": "device",
            "type": "autocomplete",
            "placeholder": {
              "en": "Device",
              "nl": "Apparaat"
            }
          },
          {
            "name": "controlGroup",
            "type": "autocomplete",
            "placeholder": {
              "en": "Type",
              "nl": "Soort"
            }
          },
          {
            "name": "action",
            "type": "autocomplete",
            "placeholder": {
              "en": "Command",
              "nl": "Opdracht"
            }
          }
        ]
      }
    ]
  }
}